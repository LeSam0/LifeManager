<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LifeManager.MainWindow"
        Background="#FFFFFF" Opacity="10"
        Title="LifeManager">
        <StackPanel Margin="20">
                <TextBlock Margin="0 5" >Categorie :</TextBlock>
                <TextBox  Watermark="Categorie"/>
                <TextBlock Margin="0 5" >Article :</TextBlock>
                <TextBox Watermark="Article"/>
                <TextBlock Margin="0 5" >Prix :</TextBlock>
                <TextBox  Watermark="prix"/>
                <TextBlock Margin="0 5" >Quantite :</TextBlock>
                <TextBox Watermark="quantite"/>
                
        </StackPanel>
        
</Window>
